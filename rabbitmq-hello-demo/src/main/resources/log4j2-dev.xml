<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout charset="UTF-8" pattern="%d{ABSOLUTE} &lt;%c&gt; %5p [%t]: %m%n"/>
        </Console>

        <Console name="STDERR" target="SYSTEM_ERR">
            <PatternLayout charset="UTF-8" pattern="%d{ABSOLUTE} &lt;%c&gt; %5p [%t]: %m%n"/>
        </Console>

        <RollingRandomAccessFile name="SERVICE_LOG_FILE" fileName="/var/log/application/base_service.log"
                                 filePattern="/var/log/application/$${date:yyyyMM}/base_service_%d{yyyyMMdd}_%i.log.gz">
            <PatternLayout charset="UTF-8"
                           pattern="{&quot;datatype&quot;:0,&quot;business&quot;:&quot;winpos_admin&quot;,&quot;module&quot;:&quot;base_service&quot;,&quot;currentTime&quot;:&quot;%d&quot;,&quot;level&quot;:&quot;%-5p&quot;,&quot;method&quot;:&quot;%t&quot;,&quot;interface&quot;:&quot;%C&quot;,&quot;data&quot;:&quot;%m&quot;}%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="30 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="40"/>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="SERVICE_LOG_MYD" fileName="/var/log/application/base_service_myd.log"
                                 filePattern="/var/log/application/$${date:yyyyMM}/base_service_myd_%d{yyyyMMdd}_%i.log.gz">
            <PatternLayout charset="UTF-8"
                           pattern="%m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="30 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="40"/>
        </RollingRandomAccessFile>

    </Appenders>

    <Loggers>
        <!-- Root Logger -->
        <Root level="INFO">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="SERVICE_LOG_FILE"/>
        </Root>

        <Logger name="com.netflix" level="ERROR" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="com.alibaba.dubbo" level="ERROR" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="org.jboss" level="ERROR" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="org.apache.zookeeper" level="ERROR" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="org.springframework.context.annotation" level="ERROR" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="org.apache.http" level="ERROR" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="org.mybatis.spring.mapper" level="DEBUG" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="com.baidu.disconf" level="ERROR" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="org.springframework.beans" level="ERROR" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="org.springframework.core.io.support" level="ERROR" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="org.springframework.aop" level="ERROR" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="org.I0Itec.zkclient" level="ERROR" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="org.mybatis.spring" level="DEBUG" additivity="false">
            <AppenderRef ref="STDOUT"/>

        </Logger>


        <Logger name="org.apache.ibatis" level="DEBUG" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <!-- 打印mybatis语句的配置 begin-->
        <logger name="Java.sql.Connection" additivity="true">
            <level value="DEBUG" />
        </logger>
        <logger name="java.sql.Statement" additivity="true">
            <level value="DEBUG" />
        </logger>
        <logger name="java.sql.PreparedStatement" additivity="true">
            <level value="DEBUG" />
        </logger>
        <logger name="java.sql.ResultSet" additivity="true">
            <level value="DEBUG" />
        </logger>
        <!-- 打印mybatis语句的配置 end-->

        <Logger name="org.hibernate.validator" level="ERROR" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="org.springframework.core.env" level="ERROR" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="org.springframework.context.support" level="ERROR" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="org.quartz.simpl" level="ERROR" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Logger name="org.apache.activemq.jms" level="ERROR" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <!-- service provider Logger -->
        <Logger name="cn.mwee" level="DEBUG" additivity="false">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="SERVICE_LOG_FILE"/>
        </Logger>

        <!-- test service provider Logger -->
        <Logger name="test.cn.mwee" level="DEBUG" additivity="false">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="SERVICE_LOG_FILE"/>
        </Logger>

        <Logger name="cn.mwee.winpos.cloud.admin.common.aspect.ServiceAspect" level="DEBUG" additivity="false">
            <AppenderRef ref="SERVICE_LOG_MYD"/>
        </Logger>

    </Loggers>

</Configuration>